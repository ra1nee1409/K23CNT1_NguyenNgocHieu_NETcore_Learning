@{
    ViewData["Title"] = "Index";
    var accounts = ViewBag.accounts as List<Account>;
}
<div class="row">
    @foreach (var item in accounts)
    {
        <div class="col-md-4">
            <div class="thumbnail">
                <img src="@item.Avatar" alt="Alternate Text" class="img-fluid avatar-img" />
                <div class="caption">
                    <h3>@item.Name</h3>
                    <p>
                        @item.Bio
                    </p>
                    <p>
                    </p>
                    <p>
                        <a asp-route="Profile" asp-route-id="@item.Id" class="btn btn-success mt-auto">Xem hồ sơ</a>
                    </p>
                </div>
            </div>
        </div>
    }
</div>