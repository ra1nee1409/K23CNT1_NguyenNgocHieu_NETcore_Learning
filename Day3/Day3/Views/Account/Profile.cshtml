@{
    ViewData["Title"] = "Profile";
    var account = ViewBag.Account;
}

<h1>Profile</h1>

<div class="row">
    <div class="col-md-4">
        <img src="@account.Avatar" alt="" style="width:100%" />
    </div>
    <div class="col-md-8">
        <h2>Full Name: @account.Name</h2>
        <h3>Email: @account.Email</h3>
        <h3>Phone: @account.Phone</h3>
        <h3>Address: @account.Address</h3>
        <h3>Bio: @account.Bio</h3>
        <h3>Gender: @(account.Gender == 1 ? "Male" : "Female")</h3>
        <h3>Birthday: @account.Birthday.ToString("dd/MM/yyyy")</h3>
    </div>
</div>
<p>
    <a asp-controller="Account" asp-action="Index" class="btn btn-danger">Back to list</a>
</p>
