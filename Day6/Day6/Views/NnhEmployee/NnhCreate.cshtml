@model NnhEmployee

<form asp-action="NnhCreateSubmit" method="post" class="p-3">
    <div class="mb-3">
        <label asp-for="NnhName" class="form-label">Tên nhân viên</label>
        <input asp-for="NnhName" class="form-control" />
    </div>

    <div class="mb-3">
        <label asp-for="NnhBirthDay" class="form-label">Ngày sinh</label>
        <input asp-for="NnhBirthDay" type="date" class="form-control" />
    </div>

    <div class="mb-3">
        <label asp-for="NnhEmail" class="form-label">Email</label>
        <input asp-for="NnhEmail" class="form-control" />
    </div>

    <div class="mb-3">
        <label asp-for="NnhPhone" class="form-label">Số điện thoại</label>
        <input asp-for="NnhPhone" class="form-control" />
    </div>

    <div class="mb-3">
        <label asp-for="NnhSalary" class="form-label">Lương</label>
        <input asp-for="NnhSalary" type="number" class="form-control" />
    </div>

    <div class="form-check mb-3">
        <input asp-for="NnhStatus" class="form-check-input" type="checkbox" />
        <label asp-for="NnhStatus" class="form-check-label">Kích hoạt</label>
    </div>

    <button type="submit" class="btn btn-primary">Thêm mới</button>
</form>
